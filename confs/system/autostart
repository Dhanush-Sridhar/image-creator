# display settings
xrandr --output DP-2 --off
xrandr --output HDMI-1 --auto --primary

# keyboard settings
setxkbmap -option "grp:lctrl_lshift_toggle" -layout "de" &

# disable screen blanking / engery saver mode
xset s off
xset s noblank
xset -dpms

killall x11vnc
killall pds_cutter

x11vnc -wait 50 -noxdamage -display :0 -forever -o /var/log/x11vnc.log -bg -viewonly -usepw

mkdir -p ${HOME}/usb
mountpoint -q ${HOME}/usb || sudo mount --bind /mnt ${HOME}/usb

if [ -e "/opt/pds-cutter/pds_cutter" ]
then
    /opt/pds-cutter/pds_cutter 2>&1 | systemd-cat -t pds-cutter
else
    /usr/bin/xterm
fi
